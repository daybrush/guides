{
  "name": "@scena/react-guides",
  "version": "0.16.0",
  "description": "A React Guides component that can draw ruler and manage guidelines.",
  "main": "./dist/guides.cjs.js",
  "module": "./dist/guides.esm.js",
  "sideEffects": false,
  "types": "declaration/index.d.ts",
  "scripts": {
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "start": "react-scripts start",
    "build": "rollup -c && npm run declaration && print-sizes ./dist ",
    "declaration": "rm -rf declaration && tsc -p tsconfig.declaration.json",
    "update": "npm run update:react && npm run update:preact && npm run update:react-compat",
    "update:react": "npm i @scena/react-ruler@latest",
    "update:react-compat": "cd ../react-compat-guides && npm i react-compat-ruler@latest",
    "update:preact": "cd ../preact-guides && npm i preact-ruler@latest",
    "packages": "npm run packages:update && npm run packages:build && npm run packages:publish && npm run packages:vanilla",
    "packages:update": "pvu --path=../ --update=preact-guides,react-compat-guides",
    "packages:build": "pvu --path=../ --build=preact-guides,react-compat-guides",
    "packages:publish": "pvu --path=../ --publish=preact-guides,react-compat-guides",
    "packages:vanilla": "cd ../react-compat-guides && npm run packages:update"
  },
  "keywords": [
    "scene",
    "scenejs",
    "scene.js",
    "scena",
    "guides",
    "guidelines",
    "scroller",
    "ruler",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/daybrush/guides/blob/master/packages/react-guides"
  },
  "author": "Daybrush",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daybrush/guides/issues"
  },
  "homepage": "https://daybrush.com/guides",
  "devDependencies": {
    "@daybrush/builder": "^0.1.0",
    "@scenejs/effects": "^1.0.1",
    "@types/react": "^16.8.18",
    "@types/react-color": "^3.0.1",
    "@types/react-dom": "^16.8.4",
    "print-sizes": "0.0.4",
    "pvu": "^0.5.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "shape-svg": "^0.3.3",
    "tslint": "^5.20.1",
    "typescript": "^3.4.5"
  },
  "dependencies": {
    "@daybrush/utils": "^1.4.0",
    "@scena/react-ruler": "^0.8.1",
    "css-to-mat": "^1.0.3",
    "framework-utils": "^1.1.0",
    "gesto": "^1.3.0",
    "react-css-styled": "^1.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
